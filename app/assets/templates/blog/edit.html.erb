		  <md-content layout="row" layout-align="center center" layout-padding >
		  	<div flex-gt-sm="90" flex-gt-md="70" style="background:white;padding:25px 100px">

        <form name="postForm" ng-submit="save()" novalidate >
          <md-input-container class="md-block">
           <label>Title</label>
           <input ng-model="post.title">
          </md-input-container>

          <md-input-container class="md-block">
            <label>Subtitle</label>
            <input ng-model="post.subtitle">
          </md-input-container>

          <div layout-gt-sm="row">
            <md-input-container class="md-block" flex-gt-sm>
              <label>Category</label>
              <md-select ng-model="post.category">
                <md-option ng-repeat="category in categories" value="{{ category.name }}">
                 {{ category.name }}
                </md-option>
              </md-select>
            </md-input-container>
            <md-input-container class="md-block" flex-gt-sm>
              <label>Category Color</label>
              <md-select ng-model="post.category_color">
                <md-option ng-repeat="color in colors" value="{{ color.value }}">
                 {{color.name}}
                </md-option>
              </md-select>
            </md-input-container>
          </div>

          <md-input-container class="md-block">
          <label>Content</label>
          <textarea ng-model="post.content" md-select-on-focus></textarea>
          </md-input-container>
          <div>
          <span flex></span>
          <md-button type="submit" class="md-raised md-primary" ng-click="update()">Save</md-button>
          </div>
          
        </form>
      {{ post }}
		  </md-content>
